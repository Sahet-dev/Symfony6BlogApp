{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}

























    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <button class="btn btn-question">Try For Blog</button>
            </div>
        </div>
        <div class="row">
            {% for post in posts %}
                <div class="col-12 mb-3">
                    <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">

                            <div class="row ">
                                <div class="text-center">

                                    <div class="card" >
                                        <div class="card-body">
                                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="no-hover">
                                                <h5 class="card-title q-title">{{ post.title }}</h5>
                                            </a>
                                            <h6 class="card-subtitle mb-2 text-muted">{{ post.id }}</h6>
                                            <p class="card-text">{{ post.content }}</p>
                                            <a href="#" class="card-link">{{ post.likes }}</a>
                                            <div class="card-link">{{ post.createdAt|time_diff }}</div>
                                        </div>
                                    </div>


                                </div>
                            </div>


                    </div>
                </div>
            {% endfor %}


        </div>
    </div>




{% endblock %}
